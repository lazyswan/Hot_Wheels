<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Obstacle_Avoidance">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="393dp"
            android:layout_height="67dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="340dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/start_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/btn_layout"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="start_btn_click"
                android:text="START"
                android:textSize="24sp" />

            <Button
                android:id="@+id/stop_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="stop_btn_click"
                android:text="STOP"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:id="@+id/exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_layout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="26dp"
            android:onClick="exit_btn_click"
            android:text="EXIT MODE"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="333dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ls_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LS:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fs_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FS:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rs_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RS:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bs_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BS:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/white_bgc"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/lat_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lat:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/long_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long: "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/compass_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compass_Degree:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bearing_angle_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bearing Angle:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/distance_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance:"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exit_btn"
            android:layout_marginTop="29dp"
            android:text="Status:"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>